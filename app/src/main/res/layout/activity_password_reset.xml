<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="100dp"
    android:background="@drawable/assassins_creed_1">

    <androidx.cardview.widget.CardView
        android:id="@+id/forgotPasswordEmail"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#2804D3ED">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#8684D8E3"
            android:backgroundTint="#8684D8E3">

            <TextView
                android:id="@+id/tvemail"
                android:layout_marginLeft="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Email"
                android:textColor="#00D4BB"/>

            <EditText
                android:id="@+id/forgotEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Enter your Email"
                android:backgroundTint="#00BCD4"
                android:textColorHint="#9700BCD4"
                android:paddingLeft="8dp"
                android:inputType="textEmailAddress" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"
                android:text="Send Email"
                android:id="@+id/btnSendEmail"
                android:textColor="#00D4BB"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>